
@model Movie

<div class="card border-primary mb-3" style="width: 18rem;">
    <a asp-action="Detail" asp-controller="Movie" asp-route-id="@Model.Id">
        <img src="@Model.PosterUrl" class="card-img-top img-thumbnail" alt="@Model.PosterUrl">
    </a>
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
    </div>
</div>