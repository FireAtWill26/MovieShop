@model MovieCardModel

<div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Overview</p>
        <a href="@Model.ImdbUrl" class="btn btn-primary"><img src="@Model.PosterUrl" alt="Alternate Text" /></a>
    </div>
</div>