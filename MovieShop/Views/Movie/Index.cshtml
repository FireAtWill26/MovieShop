@model List<Movie>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container">
    <div class="row row-cols-auto">
        <div class="col">
            <div class="dropdown">
                <a class ="btn btn-secondary dropdown-toggle" href="#" role="button" id="SortingMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Sorting By
                </a>
                <ul class="dropdown-menu" aria-labelledby="SortingMenuLink">
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="Movie" asp-route-sort="Id" asp-route-page=1>
                            Id                            
                        </a>
                        
                    </li>
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="Movie" asp-route-sort="ReleaseDate" asp-route-page=1>
                            Release Date
                        </a>                        
                    </li>
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="Movie" asp-route-sort="Title" asp-route-page=1>
                            Title
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="Movie" asp-route-sort="Revenue" asp-route-page=1>
                            Revenue
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="OrderMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Order
                </a>
                <ul class="dropdown-menu" aria-labelledby="OrderMenuLink">
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="Movie" asp-route-sort=@ViewData["sort"] asp-route-order ="asc" asp-route-page=1>
                            Ascending
                        </a>

                    </li>
                    <li>
                        <a class="dropdown-item" asp-action="Index" asp-controller="Movie" asp-route-sort=@ViewData["sort"] asp-route-order="desc" asp-route-page=1>
                            Descending
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col"><partial name="_GenreList" /></div>
    </div>
    <hr />
    <div class="row row-cols-auto">
        @foreach(Movie item in Model)
        {
            <div class="col">
                <partial name="_MovieIndexCard" model=@item />
            </div>
        }
    </div>
    <div class="row">
        <nav aria-label="Movie_Index_Page">
            <ul class="pagination justify-content-center">
                @if ((int)ViewData["page"] != 1){
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Movie"
                           asp-route-page=1 asp-route-order=@ViewData["order"]
                           asp-route-sort="@((string)ViewData["sort"])">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Movie"
                           asp-route-page=@((int)ViewData["page"] - 1) asp-route-order=@ViewData["order"]
                           asp-route-sort="@((string)ViewData["sort"])"><i class="bi bi-chevron-left"></i></a>
                    </li>
                    @if ((int)ViewData["page"] != 2)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-controller="Movie"
                               asp-route-page=@((int)ViewData["page"] - 2) asp-route-order=@ViewData["order"]
                               asp-route-sort="@((string)ViewData["sort"])">@((int)ViewData["page"] - 2)</a>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Movie"
                           asp-route-page=@((int)ViewData["page"] - 1) asp-route-order=@ViewData["order"]
                           asp-route-sort="@((string)ViewData["sort"])">@((int)ViewData["page"] - 1)</a>
                    </li>

                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Index" asp-controller="Movie"
                           asp-route-page=1 asp-route-order=@ViewData["order"]
                           asp-route-sort="@((string)ViewData["sort"])">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" asp-action="Index" asp-controller="Movie"
                           asp-route-page=@((int)ViewData["page"] - 1) asp-route-order=@ViewData["order"]
                           asp-route-sort="@((string)ViewData["sort"])"><i class="bi bi-chevron-left"></i></a>
                    </li>
                }
                <li class="page-item active">
                    <a class="page-link" asp-action="Index" asp-controller="Movie"
                       asp-route-page=@((int)ViewData["page"]) asp-route-order=@ViewData["order"]
                    asp-route-sort="@((string)ViewData["sort"])">@((int)ViewData["page"])</a></li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Movie"
                       asp-route-page=@((int)ViewData["page"] + 1) asp-route-order=@ViewData["order"]
                    asp-route-sort="@((string)ViewData["sort"])">@((int)ViewData["page"] + 1)</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Movie"
                       asp-route-page=@((int)ViewData["page"] + 2) asp-route-order=@ViewData["order"]
                       asp-route-sort="@((string)ViewData["sort"])">@((int)ViewData["page"] + 2)</a>
                </li>
                @if ((int)ViewData["page"] <= 2)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-controller="Movie"
                           asp-route-page=@((int)ViewData["page"] + 3) asp-route-order=@ViewData["order"]
                        asp-route-sort="@((string)ViewData["sort"])">@((int)ViewData["page"] + 3)</a>
                    </li>
                    @if ((int)ViewData["page"] == 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-controller="Movie"
                               asp-route-page=@((int)ViewData["page"] + 4) asp-route-order=@ViewData["order"]
                               asp-route-sort="@((string)ViewData["sort"])">@((int)ViewData["page"] + 4)</a>
                        </li>
                    }
                }
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Movie"
                       asp-route-page=@((int)ViewData["page"] + 1) asp-route-order=@ViewData["order"]
                    asp-route-sort="@((string)ViewData["sort"])"><i class="bi bi-chevron-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</div>